{
  "manifest_version": 3,
  "name": "Game Store Link Extractor",
  "version": "3.0",
  "description": "Extracts app links from Google Play and Apple App Store",
  "permissions": ["activeTab", "scripting"],
  "host_permissions": [
    "https://play.google.com/*", 
    "https://apps.apple.com/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "128": "icons/icon128.png"
  }
}